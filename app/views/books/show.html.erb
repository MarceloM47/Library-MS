<p style="color: green"><%= notice %></p>

<%= render @book %>

<div>

  <% if @user.admin? %>
    <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-primary" %>
    <%= button_to "Destroy this book", @book, method: :delete, class: "btn btn-danger" %>
  <% end %>
  <%= link_to "Back to books", books_path %>

</div>
