<%= render @book %>

<div class="m-4">

  <% if @user.admin? %>
    <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-primary mb-2" %>
    <%= button_to "Destroy this book", @book, method: :delete, class: "btn btn-danger mb-2" %>
  <% end %>
  <%= link_to "Back to books", books_path %>

</div>
