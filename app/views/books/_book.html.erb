  <div class="card p-3 m-0" style="width: 40%;">
    <%= image_tag(url_for(book.image)) %>
    <div class="card-body">
      <h4 class="card-title">
        <%= book.title %>
      </h4>
      <p class="card-text">
        <%= simple_description book.description %>
      </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <% if book.state %>
        Disponible
      <% else %>
        No disponible
      <% end %>
      </li>
    </ul>
