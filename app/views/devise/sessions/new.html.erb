<% if notice.present? %>
  <div class="alert alert-primary d-flex align-items-center" role="alert">
    <div>
      <%= image_tag("icons/exclamation-circle.svg", alt: "exclamation-circle") %>
      <%= notice %>
    </div>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-danger d-flex align-items-center" role="alert">
    <%= image_tag("icons/exclamation-circle.svg", alt: "exclamation-circle") %>
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container mb-5">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>Iniciar sesión</h2>
        </div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Correo electrónico", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recuérdame", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div style="display: flex; justify-content: space-around;">
          <div class="text-center mt-5">
            <p>¿No tienes una cuenta?</p>
            <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-secondary" %>
          </div>

          <div class="text-center mt-5">
            <p>¿Olvidaste tu contraseña?</p>
            <%= link_to "Restablecer contraseña", new_user_password_path, class: "btn btn-secondary" %>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
