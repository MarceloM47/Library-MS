<div id="<%= dom_id speciality %>" class="p-3 card m-2">
  <div class="card-body">
    <div class="card-title">
      <strong>Nombre:</strong>
      <%= speciality.name %>
      <p class="card-text">
        <% if action_name == "index" || action_name == "search" %>
          <%= link_to "Ver esta especialidad", speciality, class:"mt-3 btn btn-primary" %>
        <% end %>
      </p>
    </div>
  </div>
</div>
